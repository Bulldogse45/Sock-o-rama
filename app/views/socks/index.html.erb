<h2 class = "page-title">Sock it to me!</h2>
<div class="row">
  <%@socks.each do |s|%>
    <div class= "col-xs-4">
      <%=s.name%><br>
      <%=image_tag(s.img_url, class: "img-responsive")%><br>
      Material: <%=s.material%><br>
      $<%=s.price%>
      <br>
      <%= link_to "Add to Cart!", new_item_path(id:s.id), class:"btn btn-warning btn-sm"%>
      <%if current_user.name == "admin"%>
        <%= link_to "Destroy", sock_path(id:s.id), method: :delete, class:"btn btn-warning btn-sm"%>
      <%end%>
    </div>
    <%end%>
</div>
